---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { dateRange } from "@lib/utils";
import { SITE, HOME, SOCIALS } from "@consts";

const blog = (await getCollection("logs"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const projects = (await getCollection("projects"))
  .filter((project) => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_PROJECTS_ON_HOMEPAGE);

const allwork = (await getCollection("work"))
  .sort(
    (a, b) =>
      new Date(b.data.dateStart).valueOf() -
      new Date(a.data.dateStart).valueOf()
  )
  .slice(0, SITE.NUM_WORKS_ON_HOMEPAGE);

const work = await Promise.all(
  allwork.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  })
);
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <div class="card-prominent mb-16">
      <div class="max-w-2xl">
        <h1
          class="text-xl md:text-2xl font-bold text-black dark:text-white mb-6 leading-tight"
        >
          Hi, I'm Aadarsh <span class="text-2xl md:text-3xl">👋🏻</span>
        </h1>
        <div class="mb-8 text-lg">
          <p class="mb-4">
            I'm a software developer passionate about building performant,
            genuinely cool things. Currently pursuing a BSc in Computer Science
            and Information Technology, I'm exploring diverse areas of
            technology and sharpening my skills. I like to be competent about the things I do, the tech I use.
          </p>
          <ul class="space-y-2 text-stone-700 dark:text-stone-400">
            <li class="flex items-start">
              <span class="mr-2">🛠️</span> I spend much of my time building projects—some
              practical, others just for fun.
            </li>
            <li class="flex items-center">
              <span class="mr-2">⚡</span> I create solutions that either solve real
              problems or are delightfully absurd.
            </li>
            <li class="flex items-center">
              <span class="mr-2">🚫</span> I don't like to (won't) make fancy animating
              websites.
            </li>
            <li class="flex items-center">
              <span class="mr-2">🐱</span> I try to pet every cat I meet.
            </li>
            <li class="flex items-center">
              <span class="mr-2">🍦</span> I eat way too much Icecream.
            </li>
          </ul>
        </div>

        <!-- Social Links -->
        <div class="flex flex-wrap gap-3">
          {SOCIALS.map(social => (
            <Link
              href={social.HREF}
              external
              aria-label={`${SITE.NAME} on ${social.NAME}`}
              class="link-subtle text-sm px-3 py-1 rounded-full border border-stone-200 dark:border-stone-700 hover:border-stone-300 dark:hover:border-stone-600"
            >
              {social.NAME}
            </Link>
          ))}
          <Link
            href={`mailto:${SITE.EMAIL}`}
            aria-label={`Email ${SITE.NAME}`}
            class="link-subtle text-sm px-3 py-1 rounded-full border border-stone-200 dark:border-stone-700 hover:border-stone-300 dark:hover:border-stone-600"
          >
            Email
          </Link>
        </div>
      </div>
    </div>

    <div class="space-y-16">
      <!-- Latest Posts Section -->
      <section>
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-2xl font-semibold text-black dark:text-white">
            Latest Posts
          </h2>
          <Link href="/blog" class="link-primary text-sm">See all posts →</Link>
        </div>

        <ul class="flex flex-col gap-4">
          {blog.map(post => (
            <li>
              <ArrowCard entry={post} />
            </li>
          ))}
        </ul>
      </section>

      <div class="section-divider"></div>

      <!-- Recent Projects Section -->
      <section>
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-2xl font-semibold text-black dark:text-white">
            Recent Projects
          </h2>
          <Link href="/projects" class="link-primary text-sm">See all projects →</Link>
        </div>

        <ul class="flex flex-col gap-4">
          {projects.map(project => (
            <li>
              <ArrowCard entry={project} />
            </li>
          ))}
        </ul>
      </section>

      <div class="section-divider"></div>

      <!-- Let's Connect Section -->
      <section>
        <div class="card text-center">
          <h2 class="text-2xl font-semibold text-black dark:text-white mb-4">
            Let's Connect
          </h2>
          <p
            class="text-stone-600 dark:text-stone-400 mb-6 max-w-lg mx-auto leading-relaxed"
          >
            If you want to collaborate with me in cool projects, reach out on social media or send me an email.
          </p>

          <div class="flex flex-wrap justify-center gap-3">
            {SOCIALS.map(social => (
              <Link
                href={social.HREF}
                external
                aria-label={`${SITE.NAME} on ${social.NAME}`}
                class="link-primary text-sm px-4 py-2 rounded-full border border-stone-300 dark:border-stone-600 hover:border-stone-400 dark:hover:border-stone-500 hover:bg-stone-50 dark:hover:bg-stone-800/50"
              >
                {social.NAME}
              </Link>
            ))}
            <Link
              href={`mailto:${SITE.EMAIL}`}
              aria-label={`Email ${SITE.NAME}`}
              class="link-primary text-sm px-4 py-2 rounded-full bg-black dark:bg-white text-white dark:text-black hover:bg-stone-800 dark:hover:bg-stone-200"
            >
              Send Email
            </Link>
          </div>
        </div>
      </section>
    </div>
  </Container>
</PageLayout>